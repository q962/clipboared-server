{
  "name": "vue-project",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "CC BY 4.0",
  "scripts": {
    "dev": "run-p gettext:compile vite-dev",
    "vite-dev": "vite --host 0.0.0.0",
    "build": "run-p gettext:compile type-check \"build-only {@}\" --",
    "build-app": "run-p gettext:compile assets-compile type-check \"build-only {@} -- --mode app\"",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "gettext:compile": "vue-gettext-compile --config po/gettext.config.mjs",
    "assets-compile": "capacitor-assets generate --assetPath=icons --android"
  },
  "dependencies": {
    "@capacitor-community/media": "^7.0.1",
    "@capacitor/android": "^6.2.0",
    "@capacitor/app": "^6.0.1",
    "@capacitor/clipboard": "^6.0.0",
    "@capacitor/core": "^6.1.2",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.2",
    "@capacitor/preferences": "^6.0.2",
    "@capacitor/share": "^6.0.1",
    "@capacitor/status-bar": "^6.0.1",
    "browser-image-compression": "^2.0.2",
    "capacitor-community-smdns": "^0.0.1",
    "v-viewer": "^3.0.13",
    "vue": "^3.4.29",
    "vuetify": "^3.6.13"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.1.2",
    "@mdi/font": "^7.4.47",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.17.19",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eruda": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "sass": "^1.77.8",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vue-tsc": "^2.0.21",
    "vue3-gettext": "^4.0.0-alpha.8"
  }
}
